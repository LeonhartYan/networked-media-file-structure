<div class="post">
    <a href="/post/<%=post._id%>">
      <span class="date"> <%= post.date %></span>
      <% if(post.image) { %>
          <img src="<%=post.image %>">
      <% } %>
      <p class="post-text"><%= post.text %></p>
    </a>
    <form action="DELETE" action="/remove/<%= post.id %>">
        <input type="submit" value="delete">
        <input type="hidden" name="postId" value="<%=post._id%>">
    </form>
  </div>