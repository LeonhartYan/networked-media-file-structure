<body>
  <%- include('nav.ejs') %>
  <div class="occupie"></div>
  <div class="starmap-create-container">
    <form method="POST" action="/upload" enctype="multipart/form-data" class="starmap-create-form">
      <h1 class="starmap-create-title">Create Your Starmap</h1>
      <h2>Your voyage starts from here.</h2>
      <input type="text" id="theme" name="theme" placeholder="Theme (e.g., Galaxy)" required />
      <label for="interest1">Interest 1:</label>
      <input type="text" id="interest1" name="interest1" placeholder="Interest 1 (e.g., SpaceShip)" required />
      <label for="interest2">Interest 2:</label>
      <input type="text" id="interest2" name="interest2" placeholder="Interest 2 " />
      <label for="interest3">Interest 3:</label>
      <input type="text" id="interest3" name="interest3" placeholder="Interest 3" />
      <label for="interest4">Interest 4:</label>
      <input type="text" id="interest4" name="interest4" placeholder="Interest 4" />
      <label for="interest5">Interest 5:</label>
      <input type="text" id="interest5" name="interest5" placeholder="Interest 5" />
      <div class="submit-container">
        <input type="submit" name="submitbutton" value="Create the Starmap!" />
      </div>
    </form>
  </div>
</body>